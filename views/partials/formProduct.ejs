<div>
    <input type="text" class="<%= locals.errors && errors.title ? 'is-invalid' : null %>" name="title" id="name"
        placeholder="Nombre del producto" value="<%= product ? product.title : null %>">

    <select name="brand_id" id="brand" class="<%= locals.errors && errors.brand ? 'is-invalid' : null%>">
        <option value="" disabled>Marca</option>
        <option value="">Marca</option>
        <option value="apple" <%if(product){%>
            <% if(product.brand==="apple" ){ %>
                selected
                <% }} %>>Apple
        </option>
        <option value="samsung" <%if(product){%>
            <% if(product.brand==="samsung" ){ %>
                selected
                <% }} %>>Samsung
        </option>
    </select>
</div>
<div class="text-danger-container">
    <% if (locals.errors && errors.title) { %>
        <div class="text-danger">
            <%= errors.title.msg %>
        </div>
        <% } %>

            <% if (locals.errors && errors.brand) { %>
                <div class="text-danger">
                    <%= errors.brand.msg %>
                </div>
                <% } %>
</div>
<div>
    <textarea name="description" class="<%= locals.errors && errors.description ? 'is-invalid' : null%>"
        id="description" cols="30" rows="10" placeholder="Descripción del producto"><%if(product){%>
<%= product.description %>
<% } %>
</textarea>
    <% if (locals.errors && errors.description) { %>
        <div class="text-danger">
            <%= errors.description.msg %>
        </div>
        <% } %>
</div>
<div>
    <div class="form-grandson">
        <select name="currency" id="currency" class="<%= locals.errors && errors.currency ? 'is-invalid' : null%>">
            <option value="ARS">ARS</option>
        </select>
        <% if (locals.errors && errors.currency) { %>
            <div class="text-danger">
                <%= errors.currency.msg %>
            </div>
            <% } %>
                <input type="text" name="price" class="<%= locals.errors && errors.price ? 'is-invalid' : null%>"
                    id="price" placeholder="Precio" <%if(product){%>
                value="<%= product.price %>"
                    <% } %>
                        >
    </div>

    <div class="form-grandson">
        <select name="category_id" id="category" class="<%= locals.errors && errors.category ? 'is-invalid' : null%>">
            <option value="" disabled>Categoría</option>
            <option value="">Categoría</option>
            <option value="smartphone" <%if(product){%>
                <% if(product.category==="smartphone" ){ %>
                    selected
                    <% }} %>>Smartphone
            </option>
            <option value="smartwatch" <%if(product){%>
                <% if(product.category==="smartwatch" ){%>
                    selected
                    <% }} %>>Smartwatch
            </option>
            <option value="tablet" <%if(product){%>
                <% if(product.category==="tablet" ){%>
                    selected
                    <% }} %>>Tablet
            </option>
        </select>
    </div>
</div>
<div class="text-danger-container">
    <% if (locals.errors && errors.price) { %>
        <div class="text-danger">
            <%= errors.price.msg %>
        </div>
        <% } %>

            <% if (locals.errors && errors.category) { %>
                <div class="text-danger">
                    <%= errors.category.msg %>
                </div>
                <% } %>
</div>
<div>
    <h3>Agrega imágenes</h3>

    <label for="images">
        <div class="input-img-text">
            <p>Selecciona un archivo</p>
            <p>o</p>
            <p>Arrástralo hasta aquí</p>
        </div>
    </label>
    <input type="file" name="images" id="images" accept="image/*" multiple>
    <% if (locals.errors && errors.productImages) { %>
        <div class="text-danger">
            <%= errors.productImages.msg %>
        </div>
        <% } %>
</div>

