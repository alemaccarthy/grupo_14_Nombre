    <h3>Agrega colores</h3>
    <label for="images">¿En cuántos colores estará disponible el producto?</label>
    <input type="number" name="colors" class=<%= locals.errors && errors.number ? 'is-invalid' : null%> id="colors" min="1" max="4">
    <% if (locals.errors && errors.number) { %>
        <div class= "text-danger">
            <%= errors.number.msg %>
        </div>
    <% } %>
    <div>
        <input type="color" name="color1" <%if(updatedProduct){%>
