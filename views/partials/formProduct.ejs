<div>
    <input type="text" class="<%= locals.errors && errors.title ? 'is-invalid' : null %>" name="title" id="name" placeholder="Nombre del producto"
    value="<%= product ? product.title : null %>"
            >        
                <% if (locals.errors && errors.title) { %>
                    <span class= "text-danger">
                        <%= errors.title.msg %>
                    </span>
                <% } %>
            
            <select name="brand" id="brand" class=<%= locals.errors && errors.brand ? 'is-invalid' : null%>>
                <option value="" disabled>Marca</option>
                <option value="">Marca</option>
                <option value="apple" <%if(product){%>
                    <%  if(product.brand === "apple"){ %>
                        selected
                        <% }} %>>Apple</option>
                <option value="samsung" <%if(product){%>
                    <%  if(product.brand === "samsung"){ %>
                        selected
                        <% }} %>>Samsung</option>
            </select>
            <% if (locals.errors && errors.brand) { %>
                <span class= "text-danger">
                    <%= errors.brand.msg %>
                </span>
            <% } %>
</div>
<div>
    <textarea name="description" class=<%= locals.errors && errors.description ? 'is-invalid' : null%> id="description" cols="30" rows="10" placeholder="Descripción del producto"><%if(product){%>
<%= product.description %>
<% } %>
</textarea>
</div>
<% if (locals.errors && errors.description) { %>
    <span class ="text-danger">
        <%= errors.description.msg %>
    </span>
<% } %>
<div>
    <div class="form-grandson">
        <select name="currency" id="currency" class=<%= locals.errors && errors.currency ? 'is-invalid' : null%>>
            <option value="ARS">ARS</option>
        </select>
        <% if (locals.errors && errors.currency) { %>
            <span class= "text-danger">
                <%= errors.currency.msg %>
            </span>
        <% } %>
        <input type="text" name="price" class=<%= locals.errors && errors.price ? 'is-invalid' : null%> id="price" placeholder="Precio" <%if(product){%>
        value="<%= product.price %>"
            <% } %>
                >
    </div>
    <% if (locals.errors && errors.price) { %>
        <span class= "text-danger">
            <%= errors.price.msg %>
        </span>
    <% } %>
    <div class="form-grandson">
        <select name="category" id="category" class=<%= locals.errors && errors.category ? 'is-invalid' : null%>>
            <option value="" disabled>Categoría</option>
            <option value="">Categoría</option>
            <option value="smartphone" <%if(product){%>
                <%  if(product.category === "smartphone"){ %>
                    selected
                    <% }} %>>Smartphone</option>
            <option value="smartwatch" <%if(product){%>
                <%  if(product.category === "smartwatch"){%>
                    selected
                    <% }} %>>Smartwatch</option>
            <option value="tablet" <%if(product){%>
                <%  if(product.category === "tablet"){%>
                    selected
                    <% }} %>>Tablet</option>
        </select>
    </div>
    <% if (locals.errors && errors.category) { %>
        <span class= "text-danger">
            <%= errors.category.msg %>
        </span>
    <% } %>
</div>
<div>
    <h3>Agrega imágenes</h3>

    <label for="images">
        <div class="input-img-text">
            <p>Selecciona un archivo</p>
            <p>o</p>
            <p>Arrástralo hasta aquí</p>
        </div>
    </label>
    <input type="file" name="productImages" id="images" accept="image/*" multiple>
    <% if (locals.errors && errors.productImages) { %>
        <span class= "text-danger">
            <%= errors.productImages.msg %>
        </span>
    <% } %>
</div>

<div>
    <h3>Agrega colores</h3>
    <label for="">¿En cuántos colores estará disponible el producto?</label>
    <input type="number" name="colors" class="<%= locals.errors && errors.colors ? 'is-invalid' : null%>" id="colors" min="1" max="4"
    value="<%= product ? product.colors : null %>">
    <% if (locals.errors && errors.colors) { %>
        <span class= "text-danger">
            <%= errors.colors.msg %>
        </span>
    <% } %>
    <div>
        <input type="color" name="color1" <%if(product){%>
            value="<%= product.color1 %>"
            <% } %>>
        <input type="color" name="color2" <%if(product){%>
            value="<%= product.color2 %>"
            <% } %>>
        <input type="color" name="color3" <%if(product){%>
            value="<%= product.color3 %>"
            <% } %>>
        <input type="color" name="color4" <%if(product){%>
            value="<%= product.color4 %>"
            <% } %>>
    </div>
</div>
