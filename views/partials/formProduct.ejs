<div>
    <input type="text" class=<%= locals.errors && errors.name ? 'is-invalid' : null%> name="title" id="name" placeholder="Nombre del producto" <%if(updatedProduct){%>
    value="<%= updatedProduct.title %>"
        <% } %>
            >        
                <% if (locals.errors && errors.title) { %>
                    <div class= "text-danger">
                        <%= errors.title.msg %>
                    </div>
                <% } %>
            
            <select name="brand" id="brand" class=<%= locals.errors && errors.brand ? 'is-invalid' : null%>>
                <option value="" disabled>Marca</option>
                <option value="">Marca</option>
                <option value="apple" <%if(updatedProduct){%>
                    <%  if(updatedProduct.category === "apple"){%>
                        selected
                        <% }} %>>Apple</option>
                <option value="samsung" <%if(updatedProduct){%>
                    <%  if(updatedProduct.category === "samsung"){%>
                        selected
                        <% }} %>>Samsung</option>
            </select>
            <% if (locals.errors && errors.brand) { %>
                <div class= "text-danger">
                    <%= errors.brand.msg %>
                </div>
            <% } %>
</div>
<div>
    <textarea name="description" class=<%= locals.errors && errors.description ? 'is-invalid' : null%> id="description" cols="30" rows="10" placeholder="Descripción del producto"><%if(updatedProduct){%>
<%= updatedProduct.description %>
<% } %>
</textarea>
</div>
<% if (locals.errors && errors.description) { %>
    <div class ="text-danger">
        <%= errors.description.msg %>
    </div>
<% } %>
<div>
    <div class="form-grandson">
        <select name="currency" id="currency" class=<%= locals.errors && errors.currency ? 'is-invalid' : null%>>
            <option value="ARS">ARS</option>
        </select>
        <% if (locals.errors && errors.currency) { %>
            <div class= "text-danger">
                <%= errors.currency.msg %>
            </div>
        <% } %>
        <input type="text" name="price" class=<%= locals.errors && errors.price ? 'is-invalid' : null%> id="price" placeholder="Precio" <%if(updatedProduct){%>
        value="<%= updatedProduct.price %>"
            <% } %>
                >
    </div>
    <% if (locals.errors && errors.price) { %>
        <div class= "text-danger">
            <%= errors.price.msg %>
        </div>
    <% } %>
    <div class="form-grandson">
        <select name="category" id="category" class=<%= locals.errors && errors.category ? 'is-invalid' : null%>>
            <option value="" disabled>Categoría</option>
            <option value="">Categoría</option>
            <option value="smartphone" <%if(updatedProduct){%>
                <%  if(updatedProduct.category === "smartphone"){ %>
                    selected
                    <% }} %>>Smartphone</option>
            <option value="smartwatch" <%if(updatedProduct){%>
                <%  if(updatedProduct.category === "smartwatch"){%>
                    selected
                    <% }} %>>Smartwatch</option>
            <option value="tablet" <%if(updatedProduct){%>
                <%  if(updatedProduct.category === "tablet"){%>
                    selected
                    <% }} %>>Tablet</option>
        </select>
    </div>
    <% if (locals.errors && errors.category) { %>
        <div class= "text-danger">
            <%= errors.category.msg %>
        </div>
    <% } %>
</div>
<div>
    <h3>Agrega imágenes</h3>

    <label for="images">
        <div class="input-img-text">
            <p>Selecciona un archivo</p>
            <p>o</p>
            <p>Arrástralo hasta aquí</p>
        </div>
    </label>
    <input type="file" name="products-images" id="images" accept="image/*" multiple>
    <% if (locals.errors && errors.images) { %>
        <div class= "text-danger">
            <%= errors.images.msg %>
        </div>
    <% } %>
</div>

