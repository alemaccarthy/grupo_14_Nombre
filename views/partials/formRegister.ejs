<section class="user-data">
    <section class="sub-title">
        <i class="fa-solid fa-user user"></i>
        <span>Tus datos</span>
    </section>
    <% if(locals.errors) {%>
        <%for(let error in errors) {%>
            <p class="feedback is-danger">
                <%= errors[error].msg %>
            </p>
            <%}>
                <%}%>

                    <div class="login"><button class="log-in-btn">¿Ya estás registrado?</button></div>
                    <form action="/register" method="POST" class="form">
                        <div class="form-group">
                            <input type="text" name="name" id="name"required placeholder="Nombre" value="<%= locals.userData && userData.name ? userData.name : '' %>">
                            <span class="bar"></span>
                            <label for="name">Nombre</label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastname" id="lastname" required placeholder="Apellido" value="<%= locals.userData && userData.name ? userData.lastname : '' %>">
                            <span class="bar"></span>
                            <label for="">Apellido</label>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" id="email" required placeholder="E-mail" value="<%= locals.userData && userData.email ? userData.name : '' %>">
                            <span class="bar"></span>
                            <label for="">E-mail</label>
                        </div>
                        <div class="form-group form-4">
                            <input type="password" name="password" required placeholder="Contraseña">
                            <span class="bar"></span>
                            <label for="">Contraseña</label>
                            <input type="password" name="confirm-password" required placeholder="Confirma contraseña">
                            <span class="bar"></span>
                            <label for="">Confirmar contraseña</label>
                        </div>

                        <button type="submit">Registrarme</button>
                        <p>¿Ya tenés cuenta? <a href="/">Ingresá</a></p>

                    </form>

</section>