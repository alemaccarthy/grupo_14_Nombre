<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>

        <link rel="stylesheet" href="/css/styles-login.css">
        <link rel="stylesheet" href="/css/styles-header.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

</head>

<body>
    <%- include('../partials/header') %>

        <main class="modal">
            <section id="log-in-window">
                <section class="log-in-container">
                    <h1>Log in</h1>
                    <!-- <button onclick="closeLogIn()" class="close-window"><i class="fa-solid fa-xmark"></i></button> -->
                    <form action="" method="POST" class="log-in-form">

                        <% if (error) { %>
                            <h4><i class="fa-regular fa-circle-xmark"></i>
                                <%= error %>
                            </h4>

                            <% } %>

                                <div class="group">
                                    <input type="text" name="email" id="name"><span class="barra"></span>
                                    <label for="">E-mail</label>
                                </div>

                                <div class="group">
                                    <input type="password" name="password" id="name"><span class="barra"></span>
                                    <label for="">Contraseña</label>
                                </div>

                                <div class="sesion-input">
                                    <input type="checkbox" name="remember" id="m-s"><label for="m-s">Mantener sesión
                                        abierta</label>
                                </div>

                                <button type="submit">Ingresar</button>

                                <p>¿No estás registrado? <a href="/user/register">Regístrate</a></p>
                                <button type="button" onclick="history.back()"> Volver atras</button>
                    </form>
                </section>
            </section>
        </main>

        <%- include('../partials/footer') %>
</body>

</html>