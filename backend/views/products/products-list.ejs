<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/styles-header.css">
    <link rel="stylesheet" href="/css/styles-products.css">
</head>

<body>
    <%- include('../partials/header') %>

    <main class="modal">
        <section class="banner-list">
            <% if(brand=="Samsung" ) {%>
                <img src="/imgs/samsung/banner-samsung/galaxy-s23-accessories-chargers-kv.avif" alt="">
                <% }else if(brand=="Apple" ){ %>
                    <video autoplay loop muted>
                        <source src="/videos/Videooo.mp4">
                    </video>
                    <% } %>
        </section>
        <section class="update-container">
            <% if(typeof user != 'undefined' && user != null && user.email.endsWith('@techhub.com')){ %>
            <div class="update-button">
                <button><a href="/products/create">Crear producto +</a></button>
            </div>
            <% } %>
        </section>

        <section class="products-container">
            <% if (typeof category !== 'undefined' && category !== null) { %>
                <% products.forEach(el => { %>
                    <% if (el.deletedAt === null && el.brand.name === brand && el.category.name === category) { %>
                        <a class="selected-products" href="/products/<%= el.id %>/detail">
                            <article>
                                <div class="box-img-product">
                                    <img class="imagen-producto" src="<%= el.images[0].path %>" alt="product">
                                </div>
                                <div>
                                    <h2 class="product-title">
                                        <%= el.title %>
                                    </h2>
                                    <p class="product-price">$<%= el.price %></p>
                                </div>
                            </article>
                        </a>
                    <% } %>
                <% }); %>
            <% } else { %>
                <% products.forEach(el => { %>
                    <% if (el.deletedAt === null && el.brand.name === brand) { %>
                        <a class="selected-products" href="/products/<%= el.id %>/detail">
                            <article>
                                <div class="box-img-product">
                                    <img class="imagen-producto" src="<%= el.images[0].path %>" alt="product">
                                </div>
                                <div>
                                    <h2 class="product-title">
                                        <%= el.title %>
                                    </h2>
                                    <p class="product-price">$<%= el.price %></p>
                                </div>
                            </article>
                        </a>
                    <% } %>
                <% }); %>
            <% } %>
        </section>

        <section class="presentation-product-container<% if(brand == "Samsung"){%>
            presentation-product-container-samsung
           <% }else if(brand == "Apple"){%>
                presentation-product-container-apple
               <% } %>">

                   <section class="presentation-product">

                       <% if(brand=="Samsung") {%>
                           <h1 class="smartphone-title-list smartphone-title-list-samsung">Galaxy Z</h1>
                           <video autoplay loop muted plays-inline="">
                               <source src="/videos/galaxy-z4-fold-and-flip.mp4" type="video/mp4">
                           </video>
                           <% }else if(brand=="Apple"){ %>
                               <h1 class="smartphone-title-list smartphone-title-list-apple">Iphone 14</h1>
                               <img src="/imgs/apple/home/banner-apple/iphone__ky2k6x5u6vue_og.png" alt="">
                               <% } %>

                   </section>
    </main>
    <%- include('../partials/footer') %>
</body>

</html>
